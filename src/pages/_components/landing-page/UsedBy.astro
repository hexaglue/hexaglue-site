---
import { Icon } from 'astro-icon/components';

const technologies = [
	{ icon: 'logos/java', label: 'Java', classes: 'h-8 sm:h-12' },
	{ icon: 'logos/maven', label: 'Maven', classes: 'h-6 sm:h-10' },
	{ icon: 'logos/spring', label: 'Spring', classes: 'h-6 sm:h-9' },
	{ icon: 'logos/hibernate', label: 'Hibernate', classes: 'h-6 sm:h-9' },
] satisfies Array<{ icon: string; label: string; classes?: string }>;
---

<div
	class="mt-8 sm:mt-16 xs:p-6 mx-auto w-full max-w-screen-lg xl:max-w-screen-2xl space-y-5 sm:space-y-8 p-4 sm:p-8"
>
	<div class="landing-section gap-4 sm:gap-6">
		<p class="font-light text-balance text-center text-astro-gray-200">
			Compatible avec l'écosystème Java moderne
		</p>

		<div
			class="tech-logos flex flex-wrap items-center justify-center gap-x-10 gap-y-6 sm:gap-x-14 sm:gap-y-8 px-4"
		>
			{
				technologies.map((tech) => (
					<div class="flex flex-col items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-300">
						<Icon name={tech.icon} class:list={['w-auto', tech.classes]} aria-label={tech.label} />
						<span class="text-xs text-astro-gray-300">{tech.label}</span>
					</div>
				))
			}
		</div>
	</div>
</div>

<style>
	.tech-logos {
		mask-image: linear-gradient(to bottom, white, white 75%, transparent);
		mask-size: 100% 12rem;
	}

	@media (min-width: 640px) {
		.tech-logos {
			mask-image: none;
		}
	}
</style>
