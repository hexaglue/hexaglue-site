---
import FeatureCard from './FeatureCard.astro';
---

<FeatureCard
	icon="ri/file-list-3-line"
	title="Living Documentation"
	description="Génère automatiquement une documentation qui est synchronisée avec votre code."
>
	<div slot="illustration" class="doc-illustration mt-4 pt-4 border-t border-astro-dark-100/10">
		<div class="doc-preview bg-astro-dark-900/50 rounded-lg p-3 text-xs">
			<div class="doc-header flex items-center gap-2 mb-2 pb-2 border-b border-astro-dark-100/10">
				<div class="doc-icon w-4 h-4 rounded bg-astro-blue/20"></div>
				<span class="text-white font-medium">Documentation</span>
			</div>
			<div class="doc-lines space-y-1.5">
				<div class="doc-line line-1 h-2 rounded bg-astro-gray-500/30"></div>
				<div class="doc-line line-2 h-2 rounded bg-astro-gray-500/20 w-4/5"></div>
				<div class="doc-line line-3 h-2 rounded bg-astro-gray-500/30 w-3/4"></div>
				<div class="doc-line line-4 h-2 rounded bg-astro-green/20 w-1/2"></div>
			</div>
		</div>
	</div>
</FeatureCard>

<style>
	.doc-illustration {
		position: relative;
	}

	.doc-preview {
		transition: all 0.3s ease-out;
		border: 1px solid transparent;
	}

	:global(.group:hover) .doc-preview {
		border-color: rgba(50, 69, 255, 0.3);
		box-shadow: 0 0 20px rgba(50, 69, 255, 0.1);
	}

	.doc-icon {
		transition: all 0.3s ease-out;
	}

	:global(.group:hover) .doc-icon {
		background-color: rgba(50, 69, 255, 0.4);
		box-shadow: 0 0 8px rgba(50, 69, 255, 0.3);
	}

	.doc-line {
		transform-origin: left;
		transform: scaleX(0);
		transition: transform 0.4s ease-out;
	}

	:global(.group:hover) .doc-line {
		transform: scaleX(1);
	}

	.line-1 { transition-delay: 0ms; }
	.line-2 { transition-delay: 100ms; }
	.line-3 { transition-delay: 200ms; }
	.line-4 { transition-delay: 300ms; }

	:global(.group:hover) .line-4 {
		background-color: rgba(64, 222, 191, 0.3);
		box-shadow: 0 0 8px rgba(64, 222, 191, 0.2);
	}
</style>
