---
interface Props {
	height?: string;
}

const { height = 'h-40 sm:h-56' } = Astro.props;
---

<div
	class:list={[
		'stardust',
		'opacity-75',
		'w-full shrink-0 absolute rotate-[-7deg] -z-50 scale-x-[1.5] scale-y-[2.5] rounded-full mask-radial-gradient',
		height,
	]}
>
</div>
<div
	class:list={[
		'stardust',
		'opacity-50',
		'w-full shrink-0 absolute rotate-[-7deg] -z-50 scale-x-[2.5] scale-y-[4.2] rounded-full mask-radial-gradient',
		height,
	]}
>
</div>

<style>
	.stardust {
		background: linear-gradient(270deg, rgba(248, 228, 46, 0.2) 0%, rgba(255, 125, 84, 0.2) 100%);
	}
</style>
