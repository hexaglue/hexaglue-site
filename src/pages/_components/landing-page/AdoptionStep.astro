---
interface Props {
	number: number;
	label: string;
	isActive?: boolean;
}

const { number, label, isActive = false } = Astro.props;
---

<button
	role="tab"
	aria-selected={isActive ? 'true' : 'false'}
	tabindex={isActive ? 0 : -1}
	class:list={[
		'adoption-tab px-3 py-2 sm:px-6 sm:py-4 flex items-center gap-2 sm:gap-4 rounded-lg sm:rounded-xl border-2 transition-all duration-300',
		isActive
			? 'bg-astro-dark-700/50 border-astro-green text-white shadow-[0_0_20px_rgba(23,191,127,0.3)]'
			: 'bg-astro-dark-800/30 border-astro-dark-100/20 text-astro-gray-200 hover:border-astro-dark-100/40 hover:text-astro-gray-100',
	]}
>
	<span
		class:list={[
			'size-8 sm:size-10 flex items-center justify-center rounded-full text-sm sm:text-base font-bold flex-shrink-0',
			isActive ? 'bg-astro-green text-black' : 'bg-astro-dark-100/30 text-astro-gray-200',
		]}
	>
		{number}
	</span>
	<span class="hidden sm:inline text-lg font-semibold">{label}</span>
</button>
