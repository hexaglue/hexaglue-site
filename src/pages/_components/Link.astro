---
interface Props {
	href: string;
	class?: 'primary' | 'secondary' | 'ghost';
	gradient?: string;
	title?: string;
}

const { href, class: className = 'primary', gradient, title } = Astro.props;
const style = gradient ? `--cta-gradient: ${gradient}` : undefined;
---

<a
	href={href}
	title={title}
	class:list={[
		className,
		'px-4 py-2 group inline-flex items-center justify-center gap-2 rounded-full border text-base font-normal hover:cursor-pointer',
	]}
	style={style}
>
	<slot />
</a>

<style>
	.primary {
		@apply border-transparent text-white font-medium focus:outline focus:outline-2 focus:outline-offset-2;
		background-image: var(--cta-gradient, linear-gradient(247.23deg, #4AF2C8 0%, #2F4CB3 100%));
		background-clip: padding-box;
		transition: filter 0.3s ease, transform 0.15s ease;
	}
	.primary:hover {
		filter: brightness(0.85);
	}
	.secondary {
		@apply border-astro-dark-100/30 hover:border-astro-dark-100/60 text-astro-gray-200 hover:text-astro-gray-100 bg-astro-dark-600/30 hover:bg-astro-dark-600/30;
		transition: all 0.5s ease-in-out;
	}
	.ghost {
		@apply bg-transparent border-transparent text-white hover:bg-white/5;
		transition: all 0.5s ease-in-out;
	}
</style>
