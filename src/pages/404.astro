---
import { Icon } from 'astro-icon/components';
import MainLayout from '~/layouts/MainLayout.astro';
import Link from './_components/Link.astro';
---

<MainLayout title="Page non trouvée" canonicalURL={null}>
	<section
		class="grid-container relative overflow-hidden py-12 sm:py-16 md:py-20 lg:py-24 xl:py-28"
	>
		<div class="my-auto flex h-full flex-col items-center justify-center gap-8">
			<div class="flex h-48 w-48 items-center justify-center sm:h-56 sm:w-56 md:h-64 md:w-64 lg:h-72 lg:w-72 animate-float opacity-40">
				<Icon name="hexaglue/hexagon" class="h-full w-full" aria-hidden="true" />
			</div>
			<div class="text-center space-y-6">
				<h1 class="font-heading heading-bold text-5xl text-white sm:text-6xl md:text-7xl lg:text-8xl">404</h1>
				<p class="text-xl md:text-2xl lg:text-3xl text-astro-gray-200 font-light">Classification impossible.</p>
				<p class="text-lg text-astro-gray-300 font-light">
					Cette page n'existe pas dans notre modèle architectural.
				</p>
				<div class="pt-4 flex flex-col sm:flex-row items-center justify-center gap-4">
					<Link href="/" class="primary">
						Retour à l'accueil
					</Link>
					<Link href="/docs/getting-started/" class="secondary">
						<Icon name="ri:file-list-3-line" class="size-5" aria-hidden="true" />
						<span>Documentation</span>
					</Link>
				</div>
			</div>
		</div>
		<div
			class="bleed-full absolute inset-x-0 bottom-0 z-blur h-[50vw] translate-y-[60%] bg-blue-purple-gradient opacity-50 mask-radial-gradient"
		>
		</div>
	</section>
</MainLayout>
