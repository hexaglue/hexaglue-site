---
interface Props {
	description?: string;
}

const { description } = Astro.props;
---

<div class="audit-report w-full border-y border-amber-400/15 py-4">
	<!-- Report header -->
	<div class="w-full max-w-4xl mx-auto px-4 sm:px-8 pt-10 pb-2">
		<h2 class="font-heading heading-bold text-3xl md:text-4xl lg:text-5xl bg-clip-text text-transparent bg-orange-yellow-gradient">
			Rapport d'audit
		</h2>
		{description && (
			<p class="mt-3 text-lg text-astro-gray-300 font-light">{description}</p>
		)}
	</div>

	<slot />
</div>

<style>
	.audit-report {
		background:
			radial-gradient(circle at 1px 1px, rgba(251, 191, 36, 0.14) 1px, transparent 0) 0 0 / 24px 24px,
			linear-gradient(180deg, rgba(251, 191, 36, 0.05) 0%, rgba(251, 191, 36, 0.025) 50%, rgba(251, 191, 36, 0.05) 100%);
	}

	/* Tables, verdict cards, panels: "paper clipping" look */
	.audit-report :global(section .mt-10) {
		background-color: #0e0d12;
		border: 1px solid rgba(251, 191, 36, 0.07);
		border-radius: 1rem;
		padding: 1.5rem;
		box-shadow:
			0 1px 2px rgba(0, 0, 0, 0.4),
			0 4px 16px rgba(0, 0, 0, 0.3);
	}

	/* Insight callouts: opaque bg to mask the dot pattern */
	.audit-report :global(.border-l-2.rounded-r-xl) {
		background-color: #141311;
	}
</style>
