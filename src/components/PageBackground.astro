---
interface Props {
	section: 'ressources' | 'entreprise';
}

const { section } = Astro.props;
---

<div class="page-background">
	<div class:list={['glow', section === 'ressources' ? 'glow-green' : 'glow-purple']}></div>
	<div class:list={['glow-secondary', section === 'ressources' ? 'glow-green' : 'glow-purple']}></div>
	<!-- Halos latéraux répétitifs -->
	<div class:list={['glow-sides', section === 'ressources' ? 'sides-green' : 'sides-purple']}></div>
	<!-- Halo de fin de contenu (avant le footer) -->
	<div class:list={['glow-bottom', section === 'ressources' ? 'glow-green' : 'glow-purple']}></div>
</div>

<style>
	.page-background {
		position: absolute;
		top: -200px;
		left: -50%;
		right: -50%;
		bottom: -200px;
		pointer-events: none;
		z-index: -1;
	}

	.glow {
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%) rotate(-12deg);
		width: 120%;
		height: 500px;
		border-radius: 50%;
		filter: blur(120px);
		opacity: 0.2;
	}

	.glow-secondary {
		position: absolute;
		top: 20%;
		right: -10%;
		transform: rotate(8deg);
		width: 70%;
		height: 400px;
		border-radius: 50%;
		filter: blur(100px);
		opacity: 0.12;
	}

	.glow-green {
		background: linear-gradient(135deg, #40DEBF 0%, #334BA9 100%);
	}

	.glow-purple {
		background: linear-gradient(135deg, #BC52EE 0%, #3245FF 100%);
	}

	/* Halos sous le contenu - démarrent après les halos du haut */
	.glow-sides {
		position: absolute;
		top: 800px;
		left: 0;
		right: 0;
		bottom: 0;
		background-image:
			/* Halo 1 : large, légèrement à gauche */
			radial-gradient(ellipse 600px 300px at 30% 200px, var(--glow-color) 0%, transparent 70%),
			/* Halo 2 : étiré, légèrement à droite */
			radial-gradient(ellipse 500px 400px at 70% 900px, var(--glow-color-alt) 0%, transparent 65%),
			/* Halo 3 : compact, centré */
			radial-gradient(ellipse 450px 250px at 50% 1600px, var(--glow-color) 0%, transparent 70%),
			/* Halo 4 : large, à droite */
			radial-gradient(ellipse 550px 350px at 65% 2300px, var(--glow-color-alt) 0%, transparent 65%),
			/* Halo 5 : étiré, à gauche */
			radial-gradient(ellipse 480px 300px at 35% 3000px, var(--glow-color) 0%, transparent 70%);
		background-size: 100% 3200px;
		background-repeat: repeat-y;
		opacity: 0.12;
		pointer-events: none;
	}

	.sides-green {
		--glow-color: #40DEBF;
		--glow-color-alt: #334BA9;
	}

	.sides-purple {
		--glow-color: #BC52EE;
		--glow-color-alt: #3245FF;
	}

	/* Halo de fin - émane du bas vers le haut */
	.glow-bottom {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 400px;
		border-radius: 50% 50% 0 0;
		filter: blur(80px);
		opacity: 0.15;
	}
</style>
