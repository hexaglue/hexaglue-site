---
/**
 * Composant pour afficher une version centralis√©e.
 * Usage: <Version of="plugin" /> ou <Version of="core" />
 */
import versions from '~/data/versions';

interface Props {
	of: 'plugin' | 'core';
}

const { of } = Astro.props;
const version = versions[of];
---

<code class="version">{version}</code>

<style>
	.version {
		font-family: monospace;
	}
</style>
